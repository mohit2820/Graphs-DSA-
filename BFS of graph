GFG link : https://www.geeksforgeeks.org/problems/bfs-traversal-of-graph/1
class Solution {
    public ArrayList<Integer> bfs(ArrayList<ArrayList<Integer>> adj) {
        
        int n = adj.size();  // size of the adjacency matrix 
        boolean[] visited = new boolean[n];   // visited array to keep track of visited node 
        
        Queue<Integer> queue = new LinkedList<>();
        ArrayList<Integer> bfs = new ArrayList<>();
        
        // phela node dal do ie. 0 (vertex i mean)
        queue.add(0);
        visited[0] = true;  // visit ho gya 
        
        
        while(!queue.isEmpty()){
            
            int topElement = queue.poll();
            bfs.add(topElement);
            
            
            for(int x : adj.get(topElement)){
                
                if(!visited[x]){
                    visited[x] = true;
                    queue.add(x);
                }
            }
            
        }
        
        
        return bfs;
        
    }
}
